.search_view#my_network_search
  - if followers.present?
    .search-eight_people_list
      - followers.each do |follower|
        .scroll
          %article.search-eight_person
            = link_to profile_user_path(follower.id) do
              %dl.item-field
                %dt.thumbnail
                  .image_box
                    %i.fa.fa-user.fa-2x
                .text-field
                  .user-name
                    = follower.name
                    %i.fe.fe-link
                  .ellipsis-field
                    .company-name
                      = follower.companies.last.company_name if follower.companies.present?
                    .company-department
                      = follower.careers.last.department if follower.companies.present?
                .people-follow_button
                  .div
                    .common-text_button
                      追加
                  .people-follow_button__note
