.my_profile_main
  = render partial: "header"
  .main_container
    .profile_container
      .profile_preview
        .profile-article
          .background_image_box
            .profile-eight_user-eight_user_profile__profile-nav
              %nav
                .common-back_button
                  %span.common-text_button.prev
                    = link_to "#" do
                      %i.fe.fe-backward
                      %span
                        %span 戻る
          .profile-card
            .ctrl-follow-section
              %ul
                %li
                  .profile-eight_user-follow_section_button
                    .button-field
                      .dialog-button-container#follow-form
                        - unless current_user == @user
                          - if current_user.following?(@user)
                            = render "unfollow"
                          - else
                            = render "follow"
            .thumbnail
              .card
                = image_tag @user.cards.last.image if @user.cards.last
          .profile-title-field
            .thumbnail
              = image_tag @user.avatar.thumb
            .text_field
              %h2.user_name
                = @user.name
              %p.text_part
                - if current_user.try(:introduction)
                  = current_user.introduction
                - else
                  入力されていません

      .flex_box
        .my_profile__profile-aside
          .profile-my_profile-career_summary
            .box.crr
              .profile-title
                %span キャリアサマリー
              -if @user.try(:summary)
                .career_summary
                  %p.career_summary__content
                    = @user.summary
              - else
                .notfriend
                  %p 入力されていません

          .profile-my_profile-careers_info
            .profile-title
              %span 職歴
            .career
              - @user.companies.each do |company|
                .company_box
                  %span.company_name
                    = company.company_name
                - company.careers.each do |career|
                  .set_career_card
                    .career_box
                      .career_term
                        %span.career_term__per
                          = career.from
                        %span.career_term__per
                          = career.to
                      .set_career_detail
                        .department_info
                          %span.department_info__content
                            = career.department
                        .position_info
                          %span.position_info__content
                            = career.position
                    .profile_card_thumbnail_box
                      = image_tag career.card.image

          .profile-my_profile_academy-info
            .profile-title
              %span 学歴
            .academy
              - if @user.academies.present?
                - @user.academies.each do |academy|
                  .academy_box
                    .school_name_box
                      %span.school_name
                        = academy.name
                      %span.common-text_button.policy-icon-field
                        .a.modal_syncer{data: {target: "academic_info_edit#{academy.id}"} }
                          %i.fe.fe-pencil
                    .set_academy_content
                      .school_term
                        %p.school_term__per
                          = academy.from
                        %p.school_term__per
                          = academy.to
                      .set_academy_detail
                        .school_major
                          %p.school_major__content
                            = academy.major
                        .school_degree
                          %p.school_degree__content
                            = academy.degree
              - else
                .notfriend
                  %p 入力されていません

        .show-my_profile-profile-main
          .inner-header
            %p.base_info_title 基本情報
          .profile-profile_info
            %ul.tbl
              %li
                .title.icon_field
                  %i.fe.fe-building
                .contents
                  %span
                    = @user.companies.last.company_name if @user.companies.present?
                .policy
                  %span.icons
              %li
                .title.icon_field
                  %i.fe.fe-timeline
                .contents
                  %span
                    = @user.careers.last.department if @user.careers.present?
                .policy
                  %span.icons
              %li
                .title.icon_field
                  %i.fe.fe-user
                .contents
                  %span
                    = @user.careers.last.position if @user.careers.present?
                .policy
                  %span.icons
              %li
                .title.icon_field
                  %i.fe.fe-mail
                .contents
                  %span
                    = @user.email
                .policy
                  %span.icons
              %li
                .title.icon_field
                  %i.fe.fe-phone
                .contents
                  %span
                    = @user.companies.last.company_phone_num if @user.companies.present?
                .policy
                  %span.icons
              %li
                .title.icon_field
                  %i.fe.fe-info
                .contents
                  %span
                    = link_to "#{profile_user_url}", profile_user_path
                .policy
                  %span.icons
          %section
            %dl.box.binf
              %dt.profile-title
                %span 投稿
              %dd
                .timeline-timeline.profile-timeline
                  %section.post-post.timeline-post
                    .post-user_post_post.post-contents
                      %header.post-head
                        .post-ttl
                          %img.common-avatar.people-avatar.post-avatar

                          .txt
                            .ttl
                              %span.common-text_button.profile-link
                                = @user.name
                              %span.description
                                = @user.companies.last.company_name if @user.companies.present?
                            .link-to-detail
                              %span 2018年1月6日
                        .post-ctrl
                          %a.nav-btn{:href => "javascript:void(0)"}
                            %span
                          %div
                      .post-body
                        %p.text-contents test
                        %figure.post-detail
                      %footer.post-footer
                        %ul.post-count
                          %li.align-right.comment-count
                        %ul.post-ctrl
                          %li.align-left
                            %span.common-text_button
                              %i.fe.fe-like.fe-1-6x
                              %span いいね
                          %li.align-left
                            %span.common-text_button
                              %i.fe.fe-comment.fe-1-6x
                              %span コメントする

    = render partial: "recomended_people"
