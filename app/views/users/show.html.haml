.my_profile_main
  = render partial: "header"
  .main_container
    .profile_container
      .profile_preview
        .preview_button
          %span.preview_button__text
            %span.preview_button__text プレビューを表示する
        .profile-article
          .background_image_box
            %span.background_image_box__button
              %i.fe.fe-camera
              %span カバー写真を変更
          .profile-card.thumbnail
            %a.modal_syncer{data: {target: "user_new_card"} }
              / - if current_user.cards
              /   .card
              /     = image_tag @latest_card.image
              / - else
              /   .card
            .profile-policy_icon
              .profile-policy_icon
                %a.modal_syncer{data: {target: "user_new_card"} }
                  %i.fe.fe-camera
          .profile-title-field
            - if current_user.try(:avatar)
              .thumbnail
                = image_tag @user.avatar.thumb
            %span.common-text_button.policy-icon-field
              %a.modal_syncer{data: {target: "user_avatar"} }
                %i.fe.fe-camera
            .text_field
              %span.common-text_button.policy-icon-field
                %a.modal_syncer{data: {target: "user_introduction"} }
                  %i.fe.fe-pencil
              %h2.user_name
                = current_user.name
              %p.text_part
                - if current_user.try(:introduction)
                  = current_user.introduction
                - else
                  入力されていません

      .flex_box
        .my_profile__profile-aside
          .profile-my_profile-career_summary
            .box.crr
              .profile-title
                %span キャリアサマリー
                %span.common-text_button.policy-icon-field
                  %a.modal_syncer{data: {target: "career_summary"} }
                    %i.fe.fe-pencil
              -if current_user.try(:summary)
                .career_summary
                  %p.career_summary__content
                    = current_user.summary
              - else
                .notfriend
                  %p あなたの経歴、スキル、受賞歴
                  %p 関わった主なプロジェクトなどを
                  %p 記載しましょう

          .profile-my_profile-careers_info
            .profile-title
              %span 職歴
              %span.common-text_button.policy-icon-field
                %a.modal_syncer{data: {target: "career_info_add"} }
                  %i.fe.fe-pencil
            .career
              - @companies.each do |company|
                .company_box
                  %span.company_name
                    = company.company_name
                - company.careers.each do |career|
                  .set_career_card
                    .career_box
                      %p.career_term
                        %span.career_term__per
                          = career.from
                        %span.career_term__space ~
                        %span.career_term__per
                          = career.to
                      .set_career_detail
                        .department_info
                          %span.department_info__content
                            = career.department
                        .position_info
                          %span.position_info__content
                            = career.position
                    .profile_card_thumbnail_box
                      = image_tag career.card.image
                      %span.common-text_button.policy-icon-field
                        %a.modal_syncer{data: {target: "career_info_edit#{career.id}"} }
                          %i.fe.fe-pencil

          .profile-my_profile_academy-info
            .profile-title
              %span 学歴
              %span.common-text_button.policy-icon-field
                %a.modal_syncer{data: {target: "academic_info_add"} }
                  %i.fe.fe-plus
            .academy
              - if current_user.academies.present?
                - current_user.academies.each do |academy|
                  .academy_box
                    .school_name_box
                      %span.school_name
                        = academy.name
                      %span.common-text_button.policy-icon-field
                        .a.modal_syncer{data: {target: "academic_info_edit#{academy.id}"} }
                          %i.fe.fe-pencil
                    .set_academy_content
                      .school_term
                        %p.school_term__per
                          = academy.from
                        %p.school_term__per
                          = academy.to
                      .set_academy_detail
                        .school_major
                          %p.school_major__content
                            = academy.major
                        .school_degree
                          %p.school_degree__content
                            = academy.degree
              - else
                .notfriend
                  %p あなたが通っと高校や大学を設定しましょう

          .profile-my_profile-private_info
            .profile-title
              %span 性別・生年月日
              %span.common-text_button.policy-icon-field
                %a.modal_syncer{data: {target: "personal_info"} }
                  %i.fe.fe-pencil
            .private_table_box
              %table
                %tr.first_tr
                  %td.label 性別
                  %td.birthday
                    %span.gender_content
                      = current_user.gender
                %tr
                  %td.label 生年月日
                  %td.content
                    %span.birthday_content
                      = current_user.birthday

          .profile-career_status
            .profile-title
              %span キャリアステータス
              %span.common-text_button.policy-icon-field
                %a.modal_syncer{data: {target: "career_status"} }
                  %i.fe.fe-pencil
            - if current_user.try(:career_status)
              .my_profile_career_status
                %p
                  = current_user.career_status
            - else
              .my_profile_career_status
                %p 未設定

        .profile-my_profile-profile-main
          .base_info_title
            %span 基本情報
            %span.common-text_button.policy-icon-field
              %a.modal_syncer{data: {target: "basic_info"} }
                %i.fe.fe-pencil
          .profile-profile_info
            %ul.tbl
              %li
                .title.icon_field
                  %i.fe.fe-building
                .contents
                  - if current_user.companies
                    %span
                      = @company.try(:company_name)
                  - else
                    %p 会社情報は入力されていません
                .policy
                  %span.icons
              %li
                .title.icon_field
                  %i.fe.fe-shopping-bag
                .contents
                  - if current_user.careers
                    %span
                      = @career.try(:department)
                  - else
                    %p 所属している部署の情報は入力されていません
                .policy
                  %span.icons
              %li
                .title.icon_field
                  %i.fe.fe-user
                .contents
                  - if current_user.careers
                    %span
                      = @career.try(:position)
                  - else
                    %p 現在の役職の情報は入力されていません
                .policy
                  %span.icons
              %li
                .title.icon_field
                  %i.fe.fe-mail
                .contents
                  %span
                    = current_user.email
                .policy
                  %span.icons
              %li
                .title.icon_field
                  %i.fe.fe-phone
                .contents
                  - if current_user.companies
                    %span
                      = @company.try(:company_phone_num)
                    %span （会社電話番号）
                  - else
                    %p 勤務先の電話番号は入力されていません
                .policy
                  %span.icons
              %li
                .title.icon_field
                  %i.fe.fe-location
                .contents
                  - if current_user.try(:post_code)
                    %span
                      = current_user.post_code
                    %span (郵便番号)
                  - else
                    %p 入力されていません
                .policy
                  %span.icons
              %li
                .title.icon_field
                  %i.fe.fe-map
                .contents
                  %span
                    - if current_user.address.try(:address)
                      = current_user.address
                    - else
                      %p 入力されていません
                .policy
                  %span.icons
              %li
                .title.icon_field
                  %i.fe.fe-profile-url
                .contents
                  %span
                    - if current_user.homepage_url.try(:homepage_url)
                      = current_user.homepage_url
                    - else
                      %p 入力されていません
                .policy
                  %span.icons
              %li
                .title.icon_field
                  %i.fe.fe-facebook
                .contents
                  %span
                    - if current_user.facebook_url.try(:facebook_url)
                      = current_user.facebook_url
                    - else
                      %p 入力されていません
                .policy
                  %span.icons

