.modal_content#career_info
  .modal_form_title
    %span 職歴を編集する
  .modal_content__career_info
    = form_for @user do |f|
      .field_set
        = f.label :氏名, class: "career_info_label"
      = f.text_field :name, class: "career_info_text_field"
      .field_set
        = f.label :メールアドレス, class: "career_info_label"
      = f.text_field :email, class: "career_info_text_field"
      .field_set
        = f.label :郵便番号, class: "career_info_label"
      = f.text_field :post_code, class: "career_info_text_field"
      .field_set
        = f.label :住所, class: "career_info_label"
      = f.text_field :address, class: "career_info_text_field"
      .field_set
        = f.label :eightのホームページ, class: "career_info_label"
      = f.text_field :homepage_url, class: "career_info_text_field"
      = fields_for @company do |co|
        .field_set
          = co.label :会社名, class: "career_info_label"
        = co.text_field :company_name, class: "career_info_text_field"
        .field_set
          = co.label :会社電話, class: "career_info_label"
        = co.text_field :company_phone_num, class: "career_info_text_field"
      = fields_for @career do |ca|
        .field_set
          = ca.label :部署, class: "career_info_label"
        = ca.text_field :department, class: "career_info_text_field"
        .field_set
          = ca.label :役職, class: "career_info_label"
        = ca.text_field :position, class: "career_info_text_field"
        .field_set
          = ca.label :入社時期, class: "career_info_label"
        = ca.text_field :from, class: "career_info_text_field"
        .field_set
          = ca.label :退社時期, class: "career_info_label"
        = ca.text_field :to, class: "career_info_text_field"
      %ul.edit_buttons
        %li
          = f.submit value: "保存",class: "common-button profile_edit_button";
        %li
          %button.common-button.close_button{ type: "button" }
            %a#modal_close.button_link
              キャンセル

