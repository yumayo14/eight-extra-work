                .company Sansan株式会社
            .recommended_people-follow_button
              %button.common-button.theme-primary.l-mini-button.follow-button
                %span 追加
                .dialog-position
            %i.fe.fe-close
          %li.recomended_people-recomended_person
            .friend_info.clickable
              %img.common-avatar.people-avatar.tmb{:src => "https://upload-contents.8card.net/profiles/cec94304d8094508866590a8d5c37df11b8163eb63643deadfde157bf4ad134c2f773c8f9_76.jpg"}/
              .profile-info
                .full-name 山田尚孝
                .company Sansan株式会社
            .recommended_people-follow_button
              %button.common-button.theme-primary.l-mini-button.follow-button
                %span 追加
                .dialog-position
            %i.fe.fe-close
          %li.recomended_people-recomended_person
            .friend_info.clickable
              %img.common-avatar.people-avatar.tmb{:src => "https://upload-contents.8card.net/profiles/cec94304d8094508866590a8d5c37df11b8163eb63643deadfde157bf4ad134c2f773c8f9_76.jpg"}/
              .profile-info
                .full-name 山田尚孝
                .company Sansan株式会社
            .recommended_people-follow_button
              %button.common-button.theme-primary.l-mini-button.follow-button
                %span 追加
                .dialog-position
            %i.fe.fe-close

.modal_content#user_avatar
  .modal_avatar_form_title
    %span プロフィール写真を編集
  .modal_content__user_avatar
    = form_for @user do |f|
      = f.file_field :avatar
      %ul.edit_buttons
        %li
          = f.submit value: "保存",class: "common-button profile_edit_button";
        %li
          %button.common-button.close_button{ type: "button" }
            %a#modal_close.button_link
              キャンセル
  }

.modal_content#career_summary
  .modal_form_title
    %span キャリアサマリー
  .modal_content__summary
    = form_for @user do |f|
      = f.text_area :summary, class: "career_summary_form";
      %ul.edit_buttons
        %li
          = f.submit value: "保存",class: "common-button profile_edit_button";
        %li
